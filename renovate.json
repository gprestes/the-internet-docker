{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "lockFileMaintenance": {
        "enabled": true,
        "extends": "schedule:daily"
    },
    "platformAutomerge": true,
    "packageRules": [
        {
            "description": "Automerge non-major updates",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true
        }
    ],
    "extends": [
        "config:base"
    ]
}
